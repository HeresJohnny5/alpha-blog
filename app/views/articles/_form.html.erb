<% if @article.errors.any? %>
  <h2>The following errors prevented the article from being saved</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <div class="form-container col-6 p-4 shadow">
      <%= form_with(model: @article, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :title, class: "text-white" %>
          <%= f.text_field :title, class: "form-control shadow-sm"%>
        </div>
        <div class="form-group">
          <%= f.label :description, class: "text-white" %>
          <%= f.text_area :description, class: "form-control shadow-sm", rows: 10 %>
        </div>
        <div class="form-group text-center">
          <%= f.submit "Submit", class: "btn btn-outline-light" %>
        </div>
      <% end %>
    </div>
  </div>
</div>