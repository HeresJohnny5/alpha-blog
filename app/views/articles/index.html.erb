<h1 class="text-center my-4">Listing all Articles</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <% @articles.each do |article| %>
        <div class="card text-center mb-4 shadow">
          <div class="card-header font-italic">by <%= article.user.username %></div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to article.title, article_path(article), method: :get, class: 'text-success' %>
            </h5>
            <p class="card-text"><%= truncate(article.description, length: 50) %></p>
            <div class="btn-group" role="group" aria-label="Basic example">
              <button type="button" class="btn btn-outline-success rounded-0">
                <%= link_to 'View', article_path(article), method: :get, class: 'text-success' %>
              </button>
              <button type="button" class="btn btn-outline-info mx-3 rounded-0">
                <%= link_to 'Edit', edit_article_path(article), method: :get, class: 'text-info' %>
              </button>
              <button type="button" class="btn btn-outline-danger rounded-0">
                <%= link_to 'Delete', article_path(article), method: :delete, class: 'text-danger' %>
              </button>
            </div>
          </div>
          <div class="card-footer text-muted">Created <%= time_ago_in_words(article.created_at) %> ago, Edited <%= time_ago_in_words(article.updated_at) %> ago</div>
        </div>
      <% end %>
    </div>
  </div>
</div>