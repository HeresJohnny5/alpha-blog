<h1>Listing Articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Show', article_path(article), method: :get %></td>
      <td><%= link_to 'Edit', edit_article_path(article), method: :get %></td>
      <td><%= link_to 'Delete', article_path(article), method: :delete %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Create', new_article_path(@articles), method: :get %>